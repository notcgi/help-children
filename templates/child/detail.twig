                            <div class='letter-content'>
                                <div class='left-half'>
                                    {# <div class='title'>Комментарий</div> #}
                                    <div class='msg'>
                                        {{child.comment}}
                                    </div>
                                </div>
                                <div class='right-half'>
                                    <div class='img-block'>
                                        <iframe width="560" height="315" src="{{child.video}}"
                                            frameborder="0"
                                            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                            allowfullscreen></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="helpmoney" id='needed'>
                            <div class='helpmoney-flex-container'>
                                <div class='left-half'>
                                    <div class='swiper-container gallery-top'>
                                        <div class='swiper-wrapper'>
                                            {% for img in imgs %}
                                            <div class='swiper-slide'>
                                                <div class='img-block'>
                                                    <img src='/uploads/images/{{img}}'>

                                                </div>
                                            </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="swiper-container gallery-thumbs">
                                        <div class="swiper-wrapper">
                                        {% for img in imgs %}
                                            <div class='swiper-slide'>
                                                <img src='/uploads/images/{{img}}'>
                                            </div>
                                        {% endfor %}
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="right-half">
                                    {# <div class='name'>Преобретение аппарата сВОШ</div> #}
                                    <div class='name'>{{(targets|last).name}}</div>
                                    
                                    <div class='info'>Реабилитация от {{(targets|last).totime|date("j")}} {{mnths[(targets|last).totime|date("n")]}} {{(targets|last).totime|date("Y")}} года</div>
                                    <div class="newmoneybutton bottom">
                                        Необходимо<br> <span>{{(targets|last).goal}} руб.</span>
                                    </div>
                                    <div class='descr'>{{(targets|last).descr}}</div>

                                </div>
                            </div>
                        </div>
                        <div class="childnews" id='kid-news'>
                            <div class='separator'></div>
                            {% for news in targets %}
                                <div class='childnews-row'>
                                    <div class='left-half'>
                                        {% if loop.index % 2 != 0 %}
                                        <div class='childnews-item'>
                                            <div class='childnews-content'>
                                            <div class='childnews-number'>{{loop.index}}</div>
                                            <div class='txt'>
                                            <p class='childnews-item-date'>
                                                {{news.totime|date("j")}} {{mnths[news.totime|date("n")]}} {{news.totime|date("Y")}} года
